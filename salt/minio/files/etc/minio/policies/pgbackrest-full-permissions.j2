{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::{{ bucket_name }}"
            ]
        },
        {
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket"
            ],
            "Resource": [
                "arn:aws:s3:::pgbackrest"
            ],
            "Condition": {
                "StringLike": {
                    "s3:prefix": [
                        "backup/{{ bucket_subdir }}/*",
                        "archive/{{ bucket_subdir }}/*"
                    ]
                }
            }
        },
        {
            "Effect": "Allow",
            "Action": [
                "s3:DeleteObject",
                "s3:GetObject",
                "s3:GetObjectVersion",
                "s3:PutObject",
                "s3:PutObjectTagging"
            ],
            "Resource": [
                "arn:aws:s3:::{{ bucket_name }}/backup/{{ bucket_subdir }}/*",
                "arn:aws:s3:::{{ bucket_name }}/archive/{{ bucket_subdir }}/*"
            ]
        }
    ]
}